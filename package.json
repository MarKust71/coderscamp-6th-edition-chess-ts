{
    "name": "chess-ts",
    "version": "0.0.1",
    "description": "A simple Webpack 4 starter with TypeScript transpilation",
    "main": "index.js",
    "scripts": {
        "start": "webpack serve --color --progress --profile --watch --mode development",
        "build": "webpack --config webpack.config.js --mode production",
        "build.prod": "webpack --config webpack.config.js --mode production",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
        "test": "jest",
        "lint": "eslint ./src --ext .js,.ts,.html",
        "stylelint": "npx stylelint **/*.css",
        "prettier": "prettier -c ./src/**",
        "all:fix": "npm run lint:fix && npm run stylelint:fix && npm run prettier:fix",
        "lint:fix": "eslint --fix ./src --ext .js,.ts,.html",
        "stylelint:fix": "npx stylelint --fix **/*.css",
        "prettier:fix": "prettier -w ./src/**"
    },
    "keywords": [
        "webpack",
        "webpack5",
        "typescript"
    ],
    "author": "J",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-typescript": "^7.12.13",
        "@types/jest": "^26.0.20",
        "@types/node": "14.14.22",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "awesome-typescript-loader": "5.2.1",
        "babel-eslint": "^10.1.0",
        "chokidar": "^3.5.1",
        "eslint": "^7.18.0",
        "eslint-config-airbnb": "^4.0.0",
        "eslint-config-import": "^0.13.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-css-modules": "^2.11.0",
        "eslint-plugin-html": "^6.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-jest-dom": "^3.6.5",
        "eslint-plugin-modules": "^1.1.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-testing-library": "^3.10.1",
        "jest": "^26.6.3",
        "npm-check-updates": "^11.0.2",
        "prettier": "^2.2.1",
        "prettier-eslint": "^12.0.0",
        "source-map-loader": "1.1.3",
        "stylelint": "^13.9.0",
        "stylelint-config-standard": "^20.0.0",
        "ts-jest": "^26.4.4",
        "tslint": "6.1.3",
        "tslint-loader": "3.5.4",
        "typescript": "4.1.3",
        "webpack": "^5.17.0",
        "webpack-cli": "^4.4.0",
        "webpack-dev-server": "^3.11.2"
    },
    "eslintConfig": {
        "extends": []
    }
}
