{
    "name": "webpack-typescript-starter",
    "version": "0.0.1",
    "description": "A simple Webpack 4 starter with TypeScript transpilation",
    "main": "index.js",
    "scripts": {
        "start": "webpack serve --port 3000 --color --inline --progress --profile --watch --content-base src/ --mode development",
        "build": "webpack --config webpack.config.js --mode production",
        "build.prod": "webpack --config webpack.config.js -p",
        "build.esnext": "npm run build:types && npm run build:js",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
        "build.all": "npm run build.prod && npm run build.esnext",
        "test": "karma start karma.config.js",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prettier": "prettier -c .",
        "prettier:fix": "prettier -w ."
    },
    "keywords": [
        "webpack",
        "webpack5",
        "typescript"
    ],
    "author": "Juri Strumpflohner",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-typescript": "^7.12.7",
        "@types/jasmine": "3.6.3",
        "@types/node": "14.14.22",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "awesome-typescript-loader": "5.2.1",
        "babel-eslint": "^10.1.0",
        "chokidar": "^3.5.1",
        "eslint": "^7.18.0",
        "eslint-config-airbnb": "^4.0.0",
        "eslint-config-import": "^0.13.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest-dom": "^3.6.5",
        "eslint-plugin-modules": "^1.1.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-testing-library": "^3.10.1",
        "jasmine-core": "3.6.0",
        "karma": "6.0.1",
        "karma-jasmine": "4.0.1",
        "karma-phantomjs-launcher": "1.0.4",
        "karma-webpack": "4.0.2",
        "npm-check-updates": "^11.0.2",
        "prettier": "^2.2.1",
        "source-map-loader": "1.1.3",
        "stylelint": "^13.9.0",
        "stylelint-config-standard": "^20.0.0",
        "tslint": "6.1.3",
        "tslint-loader": "3.5.4",
        "typescript": "4.1.3",
        "webpack": "^5.17.0",
        "webpack-cli": "^4.4.0",
        "webpack-dev-server": "^3.11.2"
    },
    "eslintConfig": {
        "extends": []
    },
    "dependencies": {}
}
